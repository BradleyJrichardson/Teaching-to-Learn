<div class="newcontainer">
  <div class="newd1">

  </div>     
  <div class="newlogin">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "newform"}) do |f| %>
      <h2>Registration Form</h2>
      <hr>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, class: "newlabel" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"newlabel" %>
    </div>

    <div class="field">
      <%= f.label :firstname %><br />
      <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class:"newlabel" %>
    </div>

    <div class="field">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class:"newlabel" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"newlabel" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"newlabel" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"newlabel" %>
    </div>

    <div class="imagefield">
      <%= f.label :image_upload %><br />
      <%= f.file_field :avatar, class:"newavatar" %>
    </div>
    <br>    
    <div class="actions">
      <%= f.submit "Sign up", class: "newbutton" %>
    </div>
    <hr>
    <br>
    <div class="socials">
        <%= link_to "Sign in with Google+", user_google_oauth2_omniauth_authorize_path, class: "social3" %>

        <%= link_to "Sign in with GitHub", user_github_omniauth_authorize_path, class: "social2"%>

        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "social1" %>       
    </div>
  </div>
  <% end %>
</div>