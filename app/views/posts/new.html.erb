<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">

    <% if user_signed_in? %>
      <%= form_for @post, url: posts_path(@post) ,html: {class: "edit-form"}, :action => "create" do |f| %>
      <h4><%= f.label :title %></h4>
      <%= f.text_area :title, size: "50x2" %>

      <h4><%= f.label :content, 'Content' %></h4>
      <%= f.text_area :content, size: "50x10" %>

      <h4><%= f.label :summary, 'Summary' %></h4>
      <%= f.text_area :summary, size: "50x5" %>
      <br>

      <h4><%= f.label :category %></h4>
      <%= select_tag "category", options_for_select(Category.all.collect{ |u| [u.name] }) %>
      <br>

      <h4><%= f.label :location %></h4>
      <%= f.text_area :address, size: "50x2" %>
      <hr>
      <%= f.file_field :image %>
      <hr>
      <%= f.submit 'Create', class: 'btn btn-primary' %>
      <% end %>
    <% else %>
      <h1 class="edit-form">Please sign in </h1>
    <% end %>


  </div>
  <div class="product-device shadow-sm d-none d-md-block"></div>
  <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>


