
<div class="position-relative overflow-hidden text-center bg-light">
  <div class="mx-auto my-5">
      

  <%= form_for @post, url: post_path(@post) ,html: {class: "edit-form"}, :action => "update" do |f| %>
      <%= f.label :title %>
      <br>
      <%= f.text_area :title, size: "30x2" %>
<hr>
      <%= f.label :content, 'Content' %>
      <br>
      <%= f.text_area :content, size: "50x10" %>
<hr>
      <%= f.label :summary, 'Summary' %>
      <br>
      <%= f.text_area :summary, size: "50x7" %>
<hr>
      <%= f.label :category %>
      <%= select_tag "category", options_for_select(Category.all.collect{ |u| [u.name] }) %>
<hr>
      <label class="btn btn-outline-secondary">
    Upload image
    <span style="display:none;">
      <%= f.file_field :image, class: "btn btn-outline-secondary" %>
    </span>
  
  </label>
<hr>
    <%= f.file_field :image %>
<hr>


      <%= f.submit 'Update', class: 'btn btn-outline-success' %>
      <% end %>
<br>
<%= link_to "Back", root_path, class: "btn btn-outline-secondary" %>

    </div>
  </div>


