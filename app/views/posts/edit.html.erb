

<div class="position-relative overflow-hidden text-center bg-light">
  <div class="mx-auto">
      

  <%= form_for @post, url: post_path(@post) ,html: {class: "edit-form"}, :action => "update" do |f| %>
      <h4><%= f.label :title %></h4>
      <%= f.text_area :title, size: "30x2", class: 'text-area text-center', placeholder: "write until your hearts" %>
      <br>
      <br>
      <h4><%= f.label :content, 'Content' %></h4>
      <%= f.text_area :content, size: "50x10", class: 'text-area text-center', placeholder: "write until your hearts" %>
      <br>
      <br>
      <h4><%= f.label :summary, 'Summary' %></h4>
      <%= f.text_area :summary, size: "50x7", class: 'text-area text-center', placeholder: "write until your hearts" %>
      <br>
      <br>
      <h4><%= f.label :category %></h4>
      <div>
      <%= select_tag "category", options_for_select(Category.all.collect{ |u| [u.name] }) %>
      </div>
      <br>
      <%= f.file_field :image %>
      <%= f.submit 'Update', class: 'btn btn-outline-success' %>
      <% end %>
      <br>
      <%= link_to "Back", root_path, class: "btn btn-outline-secondary" %>
      <br>
      <br>

    </div>
  </div>

